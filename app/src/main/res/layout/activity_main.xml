<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나라를 선택하세요"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112"/>

    <Button
        android:id="@+id/bt_kr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한국"
        android:textSize="25sp"
        android:layout_marginBottom="250dp"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/bt_jp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0.2dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:text="일본"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_kr"
        app:layout_constraintBottom_toTopOf="@+id/bt_us"
        app:layout_constraintEnd_toStartOf="@+id/bt_th"
        />

    <Button
        android:id="@+id/bt_th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="태국"
        android:textSize="25sp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_kr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bt_eu"
        app:layout_constraintStart_toEndOf="@+id/bt_jp"
        />

    <Button
        android:id="@+id/bt_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미국"
        android:textSize="25sp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_jp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintEnd_toStartOf="@+id/bt_eu"
        />

    <Button
        android:id="@+id/bt_eu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유럽"
        android:textSize="25sp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_th"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintStart_toEndOf="@+id/bt_us"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="30sp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_us"
        />

</androidx.constraintlayout.widget.ConstraintLayout>